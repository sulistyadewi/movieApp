    <!-- form 2 -->

    <form
      action="/movie/<%= movie[0].id %>/edit"
      method="POST"
      class="max-w-sm mx-auto mt-8"
    >
      <div class="mb-5">
        <label for="" class="block mb-2 text-sm font-medium text-gray-900"
          >Movie Name</label
        >
        <input
          type="text"
          id=""
          name="name"
          value="<%= movie[0].name %>"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
        />
      </div>
      <div class="mb-5">
        <label
          for=""
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Release Year</label
        >
        <input
          type="text"
          id=""
          name="release_year"
          value="<%= movie[0].release_year %>"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
        />
      </div>
      <div class="mb-5">
        <label
          for=""
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Genre</label
        >
        <select
          id=""
          name="genre"
          
          class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
        >
        <option value="select_genre">Select Genre</option>
        <option value="comedy"<%= movie[0].genre==='comedy'?'selected':'' %>>comedy</option>
        <option value="drama"<%= movie[0].genre==='drama' ? 'selected':'' %>>drama</option>
        <option value="horor"<%= movie[0].genre==='horor' ? 'selected':'' %>>horor</option>
        <option value="animasi"<%= movie[0].genre==='animasi' ? 'selected':'' %>>animasi</option>
        <option value="religi"<%= movie[0].genre==='religi' ? 'selected':'' %>>religi</option>
        <option value="fantasy"<%= movie[0].genre==='fantasy' ? 'selected':''%>>fantasy</option>
        <option value="action"<%= movie[0].genre==='action' ? 'selected':'' %>>action</option>
        </select>
      </div>
      <div class="mb-5">
        <label for="">Production House</label>
        <select name="prodHouseId" id="" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
          <% movie[1].forEach(elem => { %>
            <option value="<%= elem.id %>" <%= movie[0].ProductionHouseId===elem.id ? "selected":"" %>><%= elem.name_prodHouse %></option>
          <% }) %>
          
        </select>
      </div>
      <button
        type="submit"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
      >
        Submit
      </button>
    </form>
  </body>
